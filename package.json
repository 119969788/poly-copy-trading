{
  "name": "poly-copy-trading",
  "version": "1.0.0",
  "description": "Polymarket 聪明钱自动跟单脚本",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "batch-sell": "tsx src/batch-sell.ts",
    "batch-sell-real": "tsx src/batch-sell.ts --real",
    "generate-api": "tsx src/generate-api-credentials.ts",
    "generate-api-clob": "tsx src/generate-api-clob.ts",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop poly-copy-trading",
    "pm2:restart": "pm2 restart poly-copy-trading",
    "pm2:delete": "pm2 delete poly-copy-trading",
    "pm2:logs": "pm2 logs poly-copy-trading",
    "pm2:status": "pm2 status"
  },
  "keywords": [
    "polymarket",
    "copy-trading",
    "smart-money",
    "trading-bot"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@catalyst-team/poly-sdk": "latest",
    "@polymarket/clob-client": "^5.2.1",
    "dotenv": "^16.4.5",
    "ethers": "^5.8.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
